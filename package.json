{
  "name": "mcp-server-example",
  "version": "1.0.2",
  "description": "Example MCP Server for Gemini CLI Extension",
  "type": "module",
  "main": "dist/mcp/server.js",
  "scripts": {
    "build": "tsup && tsx scripts/copy-wasm.ts",
    "clean": "rm -rf dist",
    "build-parsers": "tsx scripts/build-parsers.ts",
    "typecheck": "tsc --noEmit -p tsconfig.test.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "version": "tsx scripts/sync-version.ts && git add gemini-extension.json .claude-plugin/plugin.json .claude-plugin/marketplace.json"
  },
  "devDependencies": {
    "@types/node": "^20.11.25",
    "tree-sitter-cli": "^0.26.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "~5.4.5",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@toon-format/toon": "^2.0.0",
    "fast-glob": "^3.3.3",
    "gitdiff-parser": "^0.3.1",
    "web-tree-sitter": "^0.26.3",
    "zod": "^3.22.4"
  }
}
